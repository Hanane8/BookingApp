<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Booking.MAUI.ViewModels"
             x:Class="Booking.MAUI.Views.HomePage"
             Title="Concerts and Performances"
             BackgroundColor="Transparent">

    <AbsoluteLayout>

        <Image Source="concert1.jpg"
               Aspect="AspectFill"
               Opacity="0.9"
               AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="0,0,1,1"/>

        <!-- Scrollable Content -->
        <ScrollView AbsoluteLayout.LayoutFlags="All"
                    AbsoluteLayout.LayoutBounds="0,0,1,1">

            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Header Section -->
                <VerticalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="🎶 Welcome to Concert Booking!"
                           FontSize="30"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="White"/>
                    <Label Text="Discover and book your favorite concerts and performances."
                           FontSize="18"
                           HorizontalTextAlignment="Center"
                           TextColor="#ecf0f1"
                           Margin="0,5,0,10"/>
                </VerticalStackLayout>

                <!-- List of Concerts -->
                <Frame BackgroundColor="#80FFFFFF" CornerRadius="15" Padding="20" HasShadow="False" Margin="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="🎤 Upcoming Concerts"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#2c3e50"
                           HorizontalOptions="Center"
                           BackgroundColor="Transparent"/>

                        <CollectionView ItemsSource="{Binding Concerts}" SelectionMode="Single" SelectedItem="{Binding SelectedConcert}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#80FFFFFF"
                                           CornerRadius="12"
                                           Padding="15"
                                           HasShadow="False"
                                           Margin="5,5"
                                           BorderColor="#d1d1d1">
                                        <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, *"
                                            BackgroundColor="Transparent">
                                            <!-- Concert Icon -->
                                            <Image Source="concert2.jpg" 
                                               WidthRequest="50" 
                                               HeightRequest="50"
                                               VerticalOptions="Center"
                                               Margin="0,0,10,0"/>

                                            <VerticalStackLayout Grid.Column="1" BackgroundColor="Transparent">
                                                <Label Text="{Binding Title}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#2c3e50"
                                               BackgroundColor="Transparent"/>

                                                <Label Text="{Binding Description}"
                                               FontSize="14"
                                               TextColor="#34495e"
                                               MaxLines="2"
                                               LineBreakMode="TailTruncation"
                                               BackgroundColor="Transparent"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>



                <!-- Performances Section -->
                <Frame BackgroundColor="#80FFFFFF" 
                           CornerRadius="10" 
                           Padding="15" 
                           HasShadow="False"
                           Margin="10"
                           IsVisible="{Binding SelectedConcert}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="🎭 Available Performances" 
                           FontSize="22" 
                           FontAttributes="Bold" 
                           TextColor="#2c3e50" 
                           BackgroundColor="Transparent"/>

                        <CollectionView ItemsSource="{Binding Performances}" 
                            SelectionMode="Single" 
                            SelectedItem="{Binding SelectedPerformance}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#80FFFFFF" 
                                       CornerRadius="8" 
                                       Padding="10" 
                                       HasShadow="False" 
                                       Margin="0,5"
                                       BorderColor="#d1d1d1">
                                        <VerticalStackLayout BackgroundColor="Transparent">
                                            <Label Text="{Binding Location}" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="#2c3e50"
                                       BackgroundColor="Transparent"/>

                                            <Label Text="{Binding DateTime}" 
                                       FontSize="14" 
                                       TextColor="#34495e"
                                       BackgroundColor="Transparent"/>

                                            <Button Text="🎟 Book Performance" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.BookPerformanceCommand}"
                                        BackgroundColor="#2ecc71" 
                                        TextColor="White" 
                                        CornerRadius="10"
                                        Margin="0,10,0,0"
                                        FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>


            </VerticalStackLayout>
        </ScrollView>

    </AbsoluteLayout>

</ContentPage>
